{
    "name": "tests",
    "version": "1.0.0",
    "description": "Playwright тесты для Creative Hub",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:smoke": "playwright test --project=smoke",
        "test:smoke:headed": "playwright test --project=smoke --headed",
        "test:smoke:ui": "playwright test --project=smoke --ui",
        "test:e2e": "playwright test --project=e2e",
        "test:e2e:headed": "playwright test --project=e2e --headed",
        "test:e2e:ui": "playwright test --project=e2e --ui",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "keywords": [
        "playwright",
        "testing",
        "e2e",
        "automation"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "allure-playwright": "^3.3.3",
        "dotenv": "^17.2.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@types/lodash": "^4.17.20",
        "lodash": "^4.17.21"
    }
}