{
    "name": "tests",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:smoke": "playwright test --project=smoke",
        "test:smoke:headed": "playwright test --project=smoke --headed",
        "test:smoke:ui": "playwright test --project=smoke --ui",
        "test:e2e": "playwright test --project=e2e",
        "test:e2e:headed": "playwright test --project=e2e --headed",
        "test:e2e:ui": "playwright test --project=e2e --ui",
        "test:all": "playwright test --project=chromium --project=firefox --project=webkit",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test:screenshots": "playwright test",
        "test:screenshots:update": "playwright test --update-snapshots",
        "test:screenshots:headed": "playwright test --headed",
        "test:screenshots:ui": "playwright test --ui",
        "screenshots:run": "node scripts/run-screenshots.js run",
        "screenshots:update": "node scripts/run-screenshots.js update",
        "screenshots:report": "node scripts/run-screenshots.js report",
        "screenshots:clean": "node scripts/run-screenshots.js clean"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "allure-playwright": "^3.3.3",
        "dotenv": "^17.2.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@types/lodash": "^4.17.20",
        "lodash": "^4.17.21"
    }
}